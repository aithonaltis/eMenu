%header.navbar.navbar-fixed-top
	%nav.navbar-inner
		.container
			= link_to "eMenu", root_path, class: 'brand'
			%nav
				%ul.nav.pull-right
					%li= link_to t('home'), root_path
					%li= link_to t('help'), help_path
					- if user_signed_in?
						%li#fat-menu.dropdown 
							%a{href: '#', class: 'dropdown-toggle', data: { toggle: 'dropdown'}}= t('account') 
							%ul.dropdown-menu
								%li= link_to t('menus'), menu_items_path
								%li= link_to t('edit_account'), edit_user_registration_path
								%li.divider
								%li= link_to(t('sign_out'), destroy_user_session_path, :method => 'delete')
					- else
						%li= link_to(t('sign_up'), new_user_registration_path, id: 'sign_up')
						%li= link_to(t('sign_in'), new_user_session_path)
