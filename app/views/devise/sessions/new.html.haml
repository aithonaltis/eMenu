= provide(:title, t('sign_in'))
%h1= t('sign_in')

.row
	.span6.offset3
		= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|

			= f.label t('users.email')
			= f.email_field :email, class: "span6", id: "email"

			= f.label t('users.password')
			= f.password_field :password, class: "span6", id: "password"

			- if devise_mapping.rememberable?
				%br/
				%p
					%label.checkbox{ for: "remember_me"}
						= f.check_box :remember_me, :class => "checkbox"
						= t('remember_me')
			.form-actions
				= f.submit t('sign_in'), class: 'btn btn-primary', id: 'sign_in'

		= render "devise/shared/links"
