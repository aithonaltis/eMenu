= provide(:title, t('users.confirmation_account'))

%h2= t 'users.confimartion_instructions'

= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f|
	
	= devise_error_messages!

	%div
		= f.label t('users.email')
		= f.email_field :email

	%div
		= f.submit t('users.confirmation_account'), class: "btn btn-large btn-primary"

= render "devise/shared/links"
