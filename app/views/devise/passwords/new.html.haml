= provide(:title, t("users.send_password_reset_instruc"))
%h1= t('forgot_password?')

.row
  .span6.offset3
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: 'form-horizontal' }) do |f| 
      = devise_error_messages! 

      .control-group
        .controls
          = f.email_field :email, placeholder: t('users.email')
          %p.help-block= f.submit t('users.send_password_reset_instruc'), class: 'btn btn-small btn-success'

    = render "devise/shared/links" 
