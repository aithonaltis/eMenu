<h1>Listing menu_items</h1>

<table>
  <tr>
    <th><%= t('menu_item.name') %></th>
    <th><%= t('menu_item.description') %></th>
	<th><%= t('menu_item.type') %></th>
    <th><%= t('menu_item.price') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @menu_items.each do |menu_item| %>
  <tr>
    <td><%= menu_item.name %></td>
    <td><%= menu_item.description %></td>
	<td><%= type_name(menu_item.item_type) %></td>
    <td><%= menu_item.price %></td>
    <td><%= link_to t(:show), menu_item %></td>
    <td><%= link_to t(:edit), edit_menu_item_path(menu_item) %></td>
    <td><%= link_to t(:destroy), menu_item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

